<%- include('../../../partials/header.ejs')%>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <%- include('../../../partials/sidebar.ejs')%>
        </div>
            <div class="col-md-10 my-5">
                <div class="card card-body mx-5">
                    <h5 class="my-3">Create Your Post</h5>
                    <form action="/posts/create" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title">Enter your post Title</label>
                            <input type="text" name="title" id="title" class="form-control <%= error.title ? 'is-invalid' : '' %>" value="<%= value.title ? value.title : '' %> ">
                            <div class="invalid-feedback">
                                <%= error.title %> 
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="tiny-mce-post-body">Enter your Post</label>
                            <textarea name="body" id="tiny-mce-post-body" class="form-control <%= error.body ? 'is-invalid' : '' %> "><%= value.body %></textarea>
                            <div class="invalid-feedback">
                                <%= error.body %> 
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="tags">Enter Some Tags</label>
                            <input type="text" name="tags" id="tags" class="form-control" value="<%= value.tags ? value.tags : '' %>" placeholder="tag1,tag2,tag3...">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Upload</span>
                            </div>
                            <div class="custom-file">
                                <input type="file" name="post-thumbnail" class="custom-file-input" id="inputGroupFile">
                                <label for="inputGroupFile" class="custom-file-label">Choose File</label>
                            </div>
                        </div>
                        <%if(status == "Blocked"){%>
                            <h5>You Are <span style="color: red;">Blocked</span> </h5>
                      <%  }else{ %>
                        <input type="submit" class="btn btn-primary" value="Create Post"/>
                        
                       
                      <%}%>
                      
                    </form>
                </div>
            </div>
    </div>
</div>

<%- include('../../../partials/footer.ejs')%> 

<script src="https://cdn.tiny.cloud/1/030dgtd6677m9jd9x6knxmwpji8cpu7mhoqir50daxh59kh5/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script src="/scripts/tinyMce.js"></script>

<script>
    $('#inputGroupFile').on('change',function(event){
        let fileName = event.target.files[0].name
        $(this).next('.custom-file-label').html(fileName)
    })
</script>

</body>
</html>